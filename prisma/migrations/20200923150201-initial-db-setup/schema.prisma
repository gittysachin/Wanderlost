datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String       @default(cuid()) @id
  email            String       @unique
  name             String
  password         String
  item             Item[]
  cart             CartItem[]
  permissions      Permission[]
  resetToken       String?
  resetTokenExpiry Float?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

model Item {
  id          String   @default(cuid()) @id
  title       String
  description String
  image       String?
  largeImage  String?
  price       Int
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CartItem {
  id       String @default(cuid()) @id
  quantity Int    @default(1)
  item     Item   @relation(fields: [itemId], references: [id])
  itemId   String
  user     User   @relation(fields: [userId], references: [id])
  userId   String
}

model OrderItem {
  id          String @default(cuid()) @id
  title       String
  description String
  image       String
  largeImage  String
  price       Int
  quantity    Int    @default(1)
  user        User   @relation(fields: [userId], references: [id])
  userId      String
  order       Order  @relation(fields: [orderId], references: [id])
  orderId     String
}

model Order {
  id        String      @default(cuid()) @id
  items     OrderItem[]
  total     Int
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  charge    String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum Permission {
  USER
  ADMIN
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}