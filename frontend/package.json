{
  "name": "ecommerce-nextjs-apollo-client",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch"
  },
  "dependencies": {
