{
  "name": "sick-fits-backend",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/index",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate:prisma-nexus": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "npm -s run generate",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/index",
    "studio": "prisma studio --experimental",
    "migrate:save": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0-beta.2",
    "@types/cookie-parser": "^1.4.2",
    "apollo-server-express": "^2.12.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.2",
    "stripe": "^8.12.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^13.11.1",
    "ts-node": "^8.8.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=13.13.0"
  }
}
