{
  "name": "wanderlost-frontend",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "NODE_ENV=test jest --watch"
  },
  "dependencies": {
    "@apollo/client": "^3.1.4",
    "@prisma/client": "^2.6.2",
    "@stripe/react-stripe-js": "^1.1.2",
    "@stripe/stripe-js": "^1.9.0",
    "apollo-server-micro": "^2.17.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.16.1",
    "downshift": "^6.0.6",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.debounce": "^4.0.8",
    "next": "^9.5.3",
    "nodemailer": "^6.4.11",
    "nprogress": "^0.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-transition-group": "^4.4.1",
    "stripe": "^8.92.0",
    "styled-components": "^5.2.0",
    "waait": "^1.0.5"
  },
  "devDependencies": {
    "@apollo/react-testing": "^4.0.0",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@prisma-labs/prettier-config": "^0.1.0",
    "@prisma/cli": "^2.6.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@testing-library/user-event": "^12.1.3",
    "@types/node": "^14.6.4",
    "@types/styled-components": "^5.1.3",
    "babel-jest": "^26.3.0",
    "babel-plugin-styled-components": "^1.11.1",
    "casual": "^1.6.2",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "react-test-renderer": "^16.12.0",
    "typescript": "^4.0.2"
  },
  "prettier": "@prisma-labs/prettier-config",
  "jest": {
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
